
<script type="module">
    import {atualizarUsuario} from "/js/atualizarUsuario.js"
    import {buscarDados} from "/js/atualizarUsuario.js"
    import {atualizarSenha} from "/js/atualizarUsuario.js"
    import {estaLogado, deslogar} from "/js/autenticacao.js" 

    estaLogado()
    buscarDados()

    document.getElementById("enviar").addEventListener("click", atualizarUsuario)
    document.getElementById("enviarSenha").addEventListener("click", atualizarSenha)
    document.getElementById("deslogar").addEventListener("click", deslogar)
</script>

<div class="grid lg:grid-cols-2 grid-cols-1 items-center gap-10 mr-8 ml-8 mb-10 min-h-screen">
    <div class="">

        <div class="grid justify-center">
            <img src="img/avere.jpg" alt="">
        </div>

        <div class="grid text-center">
            <h3 class="text-white text-2xl mt-3 ">Trabalhar com Avére é como ter o baralho na sua mão </h3>
        </div>

    </div>
    <div class="grid grid-cols-1 items-center">
        <h1 class="text-[#295872] text-3xl mb-3 mx-5 mt-10 font-bold text-left">Atualizar conta</h1>
        <form class="mx-5">
            <input type="text" name="" id="nome" class="rounded-full p-2 px-3 bg-white w-full mt-4" placeholder="Nome">
            <input type="text" name="" id="email" class="rounded-full p-2 px-3 bg-white w-full mt-4" placeholder="Email">
            <input type="text" name="" id="telefone" class="rounded-full p-2 px-3 bg-white w-full mt-4" placeholder="Telefone">
            <button id="enviar" type="button" class="bg-[#357599] rounded-full mt-7 text-white font-bold p-4 text-xl mx-auto block">
                Atualizar sua conta
            </button>
        </form>

        <h1 class="text-[#295872] text-3xl mb-3 mx-5 font-bold text-left mt-10">Atualizar senha</h1>
        <form class="mx-5">
            <input type="text" name="" id="senha" class="rounded-full p-2 px-3 bg-white w-full mt-4" placeholder="Senha">
            <input type="text" name="" id="novaSenha" class="rounded-full p-2 px-3 bg-white w-full mt-4"
                placeholder="Confirmar senha">
            <button  type="button" id="enviarSenha" class="bg-[#357599] rounded-full mt-7 text-white font-bold p-4 text-xl mx-auto block">
